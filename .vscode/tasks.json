    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Love",
            "type": "shell",
            "command": "love", //Symlink love or make sure it's in path
            "args": [
                "."
            ],
            "problemMatcher": [],
        },
        {
            "label": "Tests",
            "type": "shell",
            "command": "busted",
            "args": [
                ".",
                "--verbose"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "luacheck",
            "args": [
                "."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build-Docs",
            "type": "shell",
            "command": "make",
            "args": [
                "html"
            ],
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "problemMatcher": []
        }
    ]
}